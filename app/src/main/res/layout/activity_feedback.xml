<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/gradient"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bmicalculator.FeedbackActivity">

    <TextView
        android:text="Rate us out of 5 :)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginTop="16dp"
        android:id="@+id/tv"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/rabRating"
        android:numStars="5"
        android:stepSize="0.5"
        android:progressTint="#ff007f"
        android:rating="0.0"
        android:layout_gravity="center"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:id="@+id/btnShare"
        android:layout_below="@+id/rabRating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Stay healthy , Stay happy!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvs"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_width="225dp"
        android:layout_height="275dp"
        app:srcCompat="@drawable/apple"
        android:id="@+id/iva"
        android:layout_below="@+id/btnShare"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
