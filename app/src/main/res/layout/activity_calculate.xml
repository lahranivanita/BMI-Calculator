<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bmicalculator.CalculateActivity">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#007FFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/tvData"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Inch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvInch"
        android:textColor="#ff0800"
        android:layout_above="@+id/spnInch"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnFeet"
        android:layout_above="@+id/tvInch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:text="View History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnViewHistory"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnInch"
        android:layout_above="@+id/btnCalculate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="106dp" />

    <Button
        android:text="Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:id="@+id/btnCalculate"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/btnViewHistory"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWeight"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#03c03c"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/etWeight" />

    <TextView
        android:text="Feet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0800"
        android:id="@+id/tvFeet"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/spnFeet"
        android:layout_alignLeft="@+id/tvInch"
        android:layout_alignStart="@+id/tvInch" />

    <TextView
        android:text="Height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#03c03c"
        android:textSize="25sp"
        android:id="@+id/tvHeight"
        android:layout_alignBottom="@+id/tvFeet"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:textSize="20sp"
        android:id="@+id/tvCity" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTemp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="100dp"
        android:layout_toEndOf="@+id/tvFeet"
        android:layout_toRightOf="@+id/tvFeet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="Enter Weight in kgs."
        android:id="@+id/etWeight"
        android:layout_above="@+id/btnCalculate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />
</RelativeLayout>
